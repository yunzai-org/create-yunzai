{
  "name": "yunzaib",
  "version": "1.0.0",
  "description": "yunzai机器人",
  "author": "ningmengchongshui",
  "license": "",
  "type": "module",
  "private": true,
  "scripts": {
    "app": "npm run css && node app.js --run index.ts",
    "dev": "nodemon",
    "start": "pm2 startOrRestart pm2.config.cjs",
    "stop": "pm2 stop pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "kill": "pm2 kill",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "pm2": "pm2",
    "css": "tailwindcss -i ./src/input.css -o ./public/output.css",
    "css:watch": "tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "format": "prettier --write ."
  },
  "dependencies": {
    "yunzai": "^1.0.0-rc.1",
    "ioredis": "^5.3.2",
    "mysql2": "^3.5.2",
    "sequelize": "^6.32.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/react-dom": "^18.2.22",
    "tailwindcss": "^3.4.3",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.2.5",
    "rollup": "^4.16.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.3"
  },
  "workspaces": [
    "plugins/*"
  ],
  "engines": {
    "node": ">=16.14.0"
  }
}
